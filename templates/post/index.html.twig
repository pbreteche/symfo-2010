{% extends 'base.html.twig' %}

{% block title %} {{ 'post.index_page.title' | trans }} {% endblock %}

{% block body %}
<h1>{{ 'post.index_page.title' | trans }}</h1>
<ul>
    {% for post in posts %}
    <li>
        <a href="{{ path('app_post_detail', { id: post.id }) }}">{{ post.title }}</a>

        {% if is_granted('ROLE_USER') %}
        <a href="{{ path('app_admin_post_update', { id: post.id }) }}">{{ 'site.action.edit' | trans }}</a>
        {% endif %}

    </li>
    {% endfor %}
</ul>
{% endblock %}
